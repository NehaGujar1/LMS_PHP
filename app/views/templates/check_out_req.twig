<head>
<link rel="stylesheet" href="styles/check_out_req.css">
<link rel="stylesheet" href="styles/main.css">
</head>
<pre> </pre>
<h1>Check out requests</h1>
<hr>
<form action="/check_out_req" method="post" class="c1">
<table>
    {% if reqs!=null %}
    <tr id="tit">
    <th>Name</th>
     <th>Book name</th>
     <th>Approve</th>
     <th>Disapprove</th>
    </tr>
    {% endif %}
    <tbody id="tit2">
  {% for post in reqs %}
  <tr>
    <td>{{post.name}}</td>
    <td>{{post.book_name}}</td>
    <td><input type="submit" class="input app" name="check_out_req" value="{{post.isbn}},--{{post.name}}"></input></td>
    <td><input type="submit"  class="input disapp" name="check_out_req_d" value="{{post.isbn}},--{{post.name}}"></input></td>
  </tr>
  {% endfor %}
  </tbody>
</table>

{% if approved %}
  <p>
    <em><strong>Successfully</strong> approved!</em>
  </p>
  {% endif %}
  {% if disapproved %}
  <p>
    <em><strong>Successfully</strong> disapproved!</em>
  </p>
  {% endif %}
  <input type ="submit" name="end" value="Go back" id="c2" class="input">
</form>